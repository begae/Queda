<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PostingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/writePost"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:fontFamily="@font/east_sea_dokdo"
                android:gravity="center"
                android:text="@string/writeGuide"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="@font/east_sea_dokdo"
                android:hint="@string/titleGuide"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/purple_700"
                android:textLocale="Korean"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/postContent"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="5dp"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="@font/east_sea_dokdo"
                android:hint="@string/contentGuide"
                android:inputType="text"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHint="@color/purple_700"
                android:textLocale="Korean"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/promoCheck"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:buttonTint="@color/black"
                android:fontFamily="@font/east_sea_dokdo"
                android:text="@string/promoCheckGuide"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TableRow
                android:id="@+id/date_pickers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <DatePicker
                    android:id="@+id/promoStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:calendarViewShown="false"
                    android:datePickerMode="calendar"
                    android:headerBackground="@color/yellow" />

                <DatePicker
                    android:id="@+id/promoEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:calendarViewShown="false"
                    android:datePickerMode="calendar"
                    android:headerBackground="@color/yellow" />
            </TableRow>

            <CheckBox
                android:id="@+id/attachCheck"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:buttonTint="@color/black"
                android:fontFamily="@font/east_sea_dokdo"
                android:text="@string/attachCheckGuide"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/attach_images"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/east_sea_dokdo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/attachGuide"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="gone"
                app:cornerRadius="15dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cancel_posting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_700"
                    android:fontFamily="@font/east_sea_dokdo"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/finish_postiing"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/east_sea_dokdo"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/finish"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="15dp" />
            </TableRow>

        </LinearLayout>
    </ScrollView>

