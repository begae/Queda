<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".PostDetail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image0"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TableRow
                android:id="@+id/customer_menu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp">

                <Button
                    android:id="@+id/visit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_700"
                    android:fontFamily="@font/east_sea_dokdo"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/visit_store"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/scrap"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_500"
                    android:fontFamily="@font/east_sea_dokdo"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/scrap"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:cornerRadius="15dp" />
            </TableRow>

            <TableRow
                android:id="@+id/manager_menu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_700"
                    android:fontFamily="@font/east_sea_dokdo"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/delete"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/modify"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_500"
                    android:fontFamily="@font/east_sea_dokdo"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/modify"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/set_as_notice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple"
                    android:fontFamily="@font/east_sea_dokdo"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/set_notice"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:cornerRadius="15dp" />

            </TableRow>

            <TextView
                android:id="@+id/post_detail_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/east_sea_dokdo"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:text="@string/post_title"
                android:textColor="@color/black"
                android:textLocale="Korean"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/post_detail_author"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/east_sea_dokdo"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:text="@string/post_author"
                android:textColor="@color/black"
                android:textLocale="Korean"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/post_detail_added"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/east_sea_dokdo"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:text="@string/post_added"
                android:textColor="@color/black"
                android:textLocale="Korean"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/post_detail_promo_range"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/east_sea_dokdo"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:text="@string/promo_range"
                android:textColor="@color/black"
                android:textLocale="Korean"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/post_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/east_sea_dokdo"
                android:gravity="start|center_vertical"
                android:singleLine="false"
                android:text="@string/post_content"
                android:textColor="@color/black"
                android:textLocale="Korean"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
